<h1>Edit blog</h1>
<%=form_for @blog do |f| %>
<%if @blog.errors.any? %>
   <h2>Errors:</h2>
   <ul>
     <%@blog.errors.full_messages.each do |m| %>
	<li><%= m %></li>
     <%end%>
   </ul>
<%end%>
<p>
   <%=f.label :title %><br/>
   <%=f.text_field :title %>
</p>
<p>
   <%=f.label :content %><br/>
   <%=f.text_area :content %>
</p>
<p>
    <%=f.submit "Update blog" %>
</p>

<%end%>
